div.popup.popup--small.popup-connect-wallet.popup-connect-wallet--request
	div.popup__top
		div.popup__header
			h2.text-promo-16.text-uppercase.text-center.popup__title Request for permission
			+btn-icon({type: 'button', icon: 'icon--close', iconMod: 'icon--2xs'})(class="popup__close")
	div.popup__body
		div.popup__content
			div.popup-connect-wallet__loader
				img.popup-connect-wallet__loader-img(src="images/img-popup-loader.png" alt="loader")
				p.text-14.text-center.popup__text To continue, confirm the request that 
					br
					|just appeared in your wallet
			div.popup-connect-wallet__wallet
				+cardShortWallet({
					img: 'img-metamask.png', imgAlt: 'MetaMask',
					title: 'Permission pending ...',
					text: 'This is a one-time action, but it requires gas to pay the network commission'
				})
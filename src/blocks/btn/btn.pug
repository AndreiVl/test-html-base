mixin btn(data)
	if data.type && data.type === 'link'
		- var link = '#'
		if data.url
			- var link = data.url

		a.btn(href=link, class!=attributes.class, id!=attributes.id, role="button", rel!=attributes.rel target!=attributes.target)
			if data.icon_l
				+icon(data.icon_l)

			if data.text
				span.text-T14.btn__text!=data.text
			if data.textPromo
				span.text-P12.text-uppercase.btn__text!=data.textPromo

			if data.icon_r
				+icon(data.icon_r)
	else
		- var type = 'button'
		if data.type && data.type === 'submit'
			- var type = 'submit'

		button.btn(class!=attributes.class, data-id=data.data_id, id!=attributes.id, type=type, name=data.name, rel!=attributes.rel)
			if data.icon_l
				+icon(data.icon_l)

			if data.text
				span.text-T14.btn__text!=data.text
			if data.textPromo
				span.text-P12.text-uppercase.btn__text!=data.textPromo

			if data.icon_r
				+icon(data.icon_r)